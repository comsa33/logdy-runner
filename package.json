{
  "name": "logdy-runner",
  "displayName": "Logdy Runner",
  "description": "Logdy 로그 뷰어를 안전하게 실행하는 VS Code 익스텐션",
  "version": "1.0.0",
  "publisher": "ruo",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "logdy",
    "log viewer",
    "monitoring",
    "logs"
  ],
  "activationEvents": [
    "onCommand:logdy-runner.runLogdy",
    "onCommand:logdy-runner.runLogdyWithFile",
    "onCommand:logdy-runner.stopLogdy",
    "onCommand:logdy-runner.openBrowser",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "logdy-runner.runLogdy",
        "title": "Logdy: 자동 로그 파일 감지 실행",
        "category": "Logdy"
      },
      {
        "command": "logdy-runner.runLogdyWithFile",
        "title": "Logdy: 특정 로그 파일로 실행",
        "category": "Logdy"
      },
      {
        "command": "logdy-runner.stopLogdy",
        "title": "Logdy: 중지",
        "category": "Logdy"
      },
      {
        "command": "logdy-runner.openBrowser",
        "title": "Logdy: 웹 인터페이스 열기",
        "category": "Logdy"
      },
      {
        "command": "logdy-runner.configurePortRange",
        "title": "Logdy: 포트 범위 설정",
        "category": "Logdy"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "logdy-runner.runLogdyWithFile",
          "when": "resourceExtname == .log",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "logdy-runner.runLogdy"
        },
        {
          "command": "logdy-runner.runLogdyWithFile"
        },
        {
          "command": "logdy-runner.stopLogdy"
        },
        {
          "command": "logdy-runner.openBrowser"
        },
        {
          "command": "logdy-runner.configurePortRange"
        }
      ]
    },
    "configuration": {
      "title": "Logdy Runner",
      "properties": {
        "logdy-runner.scriptPath": {
          "type": "string",
          "default": "./run_logdy_safe.sh",
          "description": "Logdy 실행 스크립트의 경로"
        },
        "logdy-runner.autoOpenBrowser": {
          "type": "boolean",
          "default": true,
          "description": "Logdy 실행 시 자동으로 브라우저 열기"
        },
        "logdy-runner.terminalName": {
          "type": "string",
          "default": "Logdy",
          "description": "Logdy 실행용 터미널 이름"
        },
        "logdy-runner.portRange": {
          "type": "object",
          "default": {
            "start": 10001,
            "end": 10099
          },
          "properties": {
            "start": {
              "type": "number",
              "minimum": 1024,
              "maximum": 65535,
              "description": "시작 포트 번호"
            },
            "end": {
              "type": "number",
              "minimum": 1024,
              "maximum": 65535,
              "description": "종료 포트 번호"
            }
          },
          "description": "Logdy가 사용할 포트 범위 설정"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/glob": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "glob": "^11.0.0",
    "mocha": "^10.1.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}